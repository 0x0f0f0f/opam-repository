depends: [
  "camomile"
  "ocamlbuild" {build}
]

build: [
  [make]
]

install: [
  [make "INSTALLDIR=%{prefix}%/bin" "install"]
  [make "DOC_INSTALLDIR=%{prefix}%/doc/headache" "install-doc"] {with-doc}
]

