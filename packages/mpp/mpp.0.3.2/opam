build: [
  ["oasis" "setup"]
  ["ocaml" "setup.ml" "-configure" "--prefix" prefix]
  ["ocaml" "setup.ml" "-build"]
]
install: ["ocaml" "setup.ml" "-install"]
remove: [
  ["ocaml" "%{etc}%/mpp/_oasis_remove_.ml" "%{etc}%/mpp"]
]
build-test: [
  ["oasis" "setup"]
  ["ocaml" "setup.ml" "-configure" "--enable-tests"]
  ["ocaml" "setup.ml" "-build"]
  ["ocaml" "setup.ml" "-test"]
]
depends: [
  ("oasis" {build & = "0.4.4"} | "oasis" {build & = "0.4.3"} | "oasis" {build & = "0.4.2"} | "oasis" {build & = "0.4.1"} | "oasis" {build & = "0.4.0"})
  "ocamlfind" {build}
]
